<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".fragment.SessionTrackerFragment">

    <TextView
        android:id="@+id/activity_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        tools:text="Running"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:textColorSecondary"/>

    <Chronometer
        android:id="@+id/activity_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Activity time: 00:00"/>

    <TextView
        android:id="@+id/activity_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Steps: 122"/>

    <TextView
        android:id="@+id/activity_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Distance: 1.23kms"/>

    <com.github.mokkun.playground.view.widget.CustomToggleButton
        android:id="@+id/track_activity_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:textOff="@string/start_tracking"
        android:textOn="@string/stop_tracking"/>

</LinearLayout>
